<ehcache>

    <!-- 1 hour cache -->
    <cache
        name="blTranslationElements"
        maxElementsInMemory="10000"
        eternal="false"
        overflowToDisk="true"
        timeToLiveSeconds="3600"/>
        
    <!-- 1 hour cache -->
    <cache
        name="blConfigurationModuleElements"
        maxElementsInMemory="1000"
        eternal="false"
        overflowToDisk="true"
        timeToLiveSeconds="3600"/>
        
    <!-- 24 hour cache -->
    <cache
        name="blBundleElements"
        maxElementsInMemory="1000"
        eternal="false"
        overflowToDisk="false"
        timeToLiveSeconds="86400"/>

</ehcache>

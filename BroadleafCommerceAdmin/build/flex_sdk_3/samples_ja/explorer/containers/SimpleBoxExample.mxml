<?xml version="1.0"?>
<!-- Simple example to demonstrate the Box layout container. -->
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml">

    <mx:Panel title="Box コンテナの例" height="75%" width="75%" 
        paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">

        <mx:Label width="100%" color="blue"
            text="Box コンテナは垂直方向に子が配置されます。"/>
        <mx:Box direction="vertical" borderStyle="solid" 
                paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10">
            <mx:Button label="ボタン 1"/>
            <mx:Button label="ボタン 2"/>
            <mx:Button label="ボタン 3"/>
            <mx:ComboBox/>
        </mx:Box>

        <mx:Label width="100%" color="blue"
            text="Box コンテナは水平方向に子が配置されます。"/>
        <mx:Box direction="horizontal" borderStyle="solid" 
                paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10">
            <mx:Button label="ボタン 1"/>
            <mx:Button label="ボタン 2"/>
            <mx:Button label="ボタン 3"/>
            <mx:ComboBox/>
        </mx:Box>

    </mx:Panel>
</mx:Application>
<?xml version="1.0"?>
<!-- Simple example to demonstrate the ControlBar container. -->
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml">

    <mx:Panel title="ControlBar コンテナの例"  width="75%" height="75%" 
        paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10">

        <mx:HBox width="100%" height="100%">
            <!-- Area for your catalog. -->
            <mx:Image source="@Embed(source='assets/Nokia_6630.png')" width="50%" height="100%"/>
			<mx:Text width="50%" color="blue"
                text="この例の ControlBar コンテナでは、Label、NumericStepper、Spacer、および Button の各コントロールを Panel コンテナの下部に追加します。"/>
        </mx:HBox>

        <mx:ControlBar>
            <mx:Label text="数量"/>
            <mx:NumericStepper/>
            <!-- Use Spacer to push Button control to the right. -->
            <mx:Spacer width="100%"/>
            <mx:Button label="カートに追加"/>
        </mx:ControlBar>

    </mx:Panel>
</mx:Application>
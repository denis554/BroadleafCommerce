<?xml version="1.0"?>
<!-- Simple example to demonstrate the Grid layout container.-->
<mx:Application borderStyle="none" xmlns:mx="http://www.adobe.com/2006/mxml">
    
    <mx:Panel title="Grid コンテナの例" height="75%" width="75%" 
        paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">

        <mx:Label width="100%" color="blue" 
            text="Button コントロールの 3 × 3 の Grid コンテナです。"/>

        <mx:Grid>
            <mx:GridRow>
                <mx:GridItem>
                    <mx:Button label="行 1 列 1" width="100"/>
                </mx:GridItem>
                <mx:GridItem>
                    <mx:Button label="行 1 列 2" width="100"/>
                </mx:GridItem>
                <mx:GridItem>
                    <mx:Button label="行 1 列 3" width="100"/>
                </mx:GridItem>
            </mx:GridRow>

            <mx:GridRow>
                <mx:GridItem>
                    <mx:Button label="行 2 列 1" width="100"/>
                </mx:GridItem>
                <mx:GridItem>
                    <mx:Button label="行 2 列 2" width="100"/>
                </mx:GridItem>
                <mx:GridItem>
                    <mx:Button label="行 2 列 3" width="100"/>
                </mx:GridItem>
            </mx:GridRow>

            <mx:GridRow>
                <mx:GridItem>
                    <mx:Button label="行 3 列 1" width="100"/>
                </mx:GridItem>
                <mx:GridItem>
                    <mx:Button label="行 3 列 2" width="100"/>
                </mx:GridItem>
                <mx:GridItem>
                    <mx:Button label="行 3 列 3" width="100"/>
                </mx:GridItem>
            </mx:GridRow>
        </mx:Grid>

    </mx:Panel>		
</mx:Application>
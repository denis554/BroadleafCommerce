<?xml version="1.0" encoding="UTF-8"?>
  
<Context path="/broadleafadmin"
            useNaming="true" antiJARLocking="true">
    <Resource name="jdbc/web" auth="Container" type="javax.sql.DataSource"
              username="@@MYSQL_USERNAME@@" password="@@MYSQL_PASSWORD@@" driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/broadleafcommerce" maxActive="20" maxIdle="10" maxWait="-1"/>
    <Resource name="jdbc/webSecure" auth="Container" type="javax.sql.DataSource"
              username="@@MYSQL_USERNAME@@" password="@@MYSQL_PASSWORD@@" driverClassName="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/broadleafcommerce" maxActive="20" maxIdle="10" maxWait="-1"/>
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
</Context>
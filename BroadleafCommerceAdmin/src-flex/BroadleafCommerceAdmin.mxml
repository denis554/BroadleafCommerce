<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="100%" xmlns:local="*" xmlns:view="org.broadleafcommerce.admin.view.*"
	 xmlns:control="org.broadleafcommerce.admin.control.*" xmlns:business="org.broadleafcommerce.admin.model.business.*"
	 creationComplete="initApp()">
	
	<mx:Script>
		<![CDATA[
			import com.adobe.cairngorm.control.CairngormEventDispatcher;
			import org.broadleafcommerce.admin.control.events.FindAllCatalogCategoriesEvent;
			private function initApp():void{
				var facce:FindAllCatalogCategoriesEvent = new FindAllCatalogCategoriesEvent();
				CairngormEventDispatcher.getInstance().dispatchEvent(facce);
			}
		]]>
	</mx:Script>
	
	<mx:Style source="/assets/styles/broadleafcommerceadmin.css" /> 
		
	<control:BlcAdminController />
	<business:Services id="blcAdminServices" />
	
	
	<mx:VBox height="100%" width="100%" minHeight="700" minWidth="1000" >
		<mx:HBox width="100%" horizontalAlign="{getStyle('adminLogoHAlign')}" >
			<mx:Image source="{getStyle('adminLogo')}"
				height="{getStyle('adminLogoHeight')}"
				width="{getStyle('adminLogoWidth')}"/> 
		</mx:HBox>
		<view:AdminContent width="100%" height="100%" />
	</mx:VBox>
	
</mx:Application>

<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%"
	defaultButton="{this.saveButton}"
	creationComplete="handleCreationComplete()">
	<mx:Script>
		<![CDATA[
			import org.broadleafcommerce.admin.model.AppModelLocator;
			import org.broadleafcommerce.admin.control.events.catalog.sku.SaveCatalogSkuEvent;
			
			[Bindable]
			private var appModel:AppModelLocator = AppModelLocator.getInstance();
			
			private function handleCreationComplete():void{
				this.nameTextInput.setFocus();
			}
			
			private function handleSaveSku(event:Event):void{
				appModel.currentSku.name = nameTextInput.text;
				appModel.currentSku.description = descriptionTextInput.text;
				appModel.currentSku.longDescription = descriptionTextInput.text;
				appModel.currentSku.activeStartDate = activeStartDateDateField.selectedDate;
				appModel.currentSku.activeEndDate = activeEndDateDateField.selectedDate;
				appModel.currentSku.retailPrice.amount = Number(retailPriceTextInput.text);
				var scse:SaveCatalogSkuEvent = new SaveCatalogSkuEvent(appModel.currentSku);
				scse.dispatch();
			}
		]]>
	</mx:Script>
	<mx:Binding
		source="appModel.currentSku.name"
		destination="nameTextInput.text"/>
	<mx:Binding
		source="appModel.currentSku.description"
		destination="descriptionTextInput.text"/>
	<mx:Binding
		source="appModel.currentSku.longDescription"
		destination="longDescriptionTextInput.text"/>
	<mx:Binding
		source="appModel.currentSku.activeStartDate"
		destination="activeStartDateDateField.selectedDate"/>
	<mx:Binding
		source="appModel.currentSku.activeEndDate"
		destination="activeEndDateDateField.selectedDate"/>
	<mx:DateFormatter
		id="dateFormatter"/>
	<mx:StringValidator
		id="nameStringValidator"
		property="text"
		source="{nameTextInput}"
		required="true"/>
	<mx:CurrencyValidator
		id="retailPriceNumberValidator"
		property="text"
		allowNegative="false"
		source="{retailPriceTextInput}"
		required="true"/>
	<mx:Form
		id="newSkuForm">
		<mx:FormItem
			label="Name:">
			<mx:TextInput
				id="nameTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Description:">
			<mx:TextInput
				id="descriptionTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Long Description:">
			<mx:TextInput
				id="longDescriptionTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Sale Price:">
			<mx:TextInput
				id="salePriceTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Retail Price:">
			<mx:TextInput
				id="retailPriceTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Taxable:">
			<mx:TextInput
				id="taxableTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Discountable:">
			<mx:TextInput
				id="discountableTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Available:">
			<mx:TextInput
				id="availableTextInput"/>
		</mx:FormItem>
		<mx:FormItem
			label="Active Start Date:">
			<mx:DateField
				id="activeStartDateDateField"/>
		</mx:FormItem>
		<mx:FormItem
			label="Active End Date:">
			<mx:DateField
				id="activeEndDateDateField"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:Button 
				id="saveButton"
				label="Save"
				click="handleSaveSku(event)"/>
		</mx:FormItem>
	</mx:Form>
</mx:Canvas>
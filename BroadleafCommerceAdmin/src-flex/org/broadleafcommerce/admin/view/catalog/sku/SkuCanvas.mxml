<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="90%">
	<mx:Script>
		<![CDATA[
			private function handleNewSku(event:Event):void{
				this.workingAreaHBox.removeAllChildren();
				var esfc:EditSkuFormCanvas = new EditSkuFormCanvas();
				this.workingAreaHBox.addChild(esfc);
			}			
			
			private function handleViewSkus(event:Event):void{
				this.workingAreaHBox.removeAllChildren();
				this.workingAreaHBox.addChild(new ViewSkusCanvas());
			}
		]]>
	</mx:Script>	
	<mx:HBox 
		width="100%"
		height="100%"
		horizontalGap="20">
		<mx:VBox
			verticalGap="10">
			<mx:LinkButton
				id="newSkuLinkButton"
				label="New Sku"
				click="handleNewSku(event)"/>
			<mx:LinkButton
				id="viewSkusLinkButton"
				label="View Skus"
				click="handleViewSkus(event)"/>
		</mx:VBox>
		<mx:HBox
			id="workingAreaHBox"
			width="100%"
			height="100%"
			borderStyle="solid"
			cornerRadius="4"
			paddingBottom="10"
			paddingLeft="10"
			paddingRight="10"
			paddingTop="10">
		</mx:HBox>		
	</mx:HBox>	
</mx:Canvas>

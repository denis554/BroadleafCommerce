<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/tx 
           http://www.springframework.org/schema/tx/spring-tx.xsd">
        
    <bean id="persistenceUnitManager" class="org.springcommerce.extensibility.jpa.OverrideMergePersistenceUnitManager">
		<property name="persistenceXmlPatchLocations">
			<list>
				<value>classpath*:META-INF/persistence-user.xml</value>
			</list>
		</property>
	</bean>
	   
    <bean id="personProcessor" class="com.springcommerce.demo.user.processors.SpecializedPersonProcessorImpl"/>
           
</beans>
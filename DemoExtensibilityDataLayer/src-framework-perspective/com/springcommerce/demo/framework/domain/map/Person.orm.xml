<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">
    <description>Data Layer Extensibility Demo</description>
    <package>com.springcommerce.demo.framework.domain.map</package>
    <mapped-superclass class="com.springcommerce.demo.framework.domain.AbstractPerson">
    	<attributes>
            <id name="id">
            	<column name="id"/>
                <generated-value/>
            </id>
            <basic name="name">
                <column name="NAME" length="100"/>
            </basic>
            <basic name="age">
                <column name="AGE"/>
            </basic>
        </attributes>
    </mapped-superclass>
    <entity class="com.springcommerce.demo.framework.domain.Person" name="Person">
    	<table name="Person"/>
    </entity>
</entity-mappings>
<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
    version="1.0">
    <description>Data Layer Extensibility Demo</description>
    <package>com.springcommerce.demo.framework.domain.map</package>
    <mapped-superclass class="">
    <entity class="com.springcommerce.demo.framework.domain.Catalog" name="Catalog">
        <table name="Catalog"/>
        <inheritance strategy="TABLE_PER_CLASS"/>
        <attributes>
            <id name="id">
                <generated-value strategy="TABLE"/>
            </id>
            <basic name="itemNumber">
                <column name="item_number"/>
            </basic>
            <basic name="color">
                <column name="color"/>
            </basic>
            <basic name="style">
                <column name="style"/>
            </basic>
        </attributes>
    </entity>
    </mapped-superclass>
</entity-mappings>
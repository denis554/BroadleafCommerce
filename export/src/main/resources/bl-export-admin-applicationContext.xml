<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mo="http://schema.broadleafcommerce.org/mo"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://schema.broadleafcommerce.org/mo http://schema.broadleafcommerce.org/mo/mo-3.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <import resource="classpath:bl-export-base-applicationContext.xml"/>
    
    <context:component-scan base-package="com.broadleafcommerce.export.admin">
        <context:exclude-filter type="regex" expression="com.broadleafcommerce.export.admin.web.controller.*"/>
    </context:component-scan>
    
    <bean id="messageSource" class="org.broadleafcommerce.common.util.BroadleafMergeResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>classpath:/messages/ExportMessages</value>
            </list>
        </property>
    </bean>

    <bean id="blExportRowLevelSecurityProviders" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <ref bean="blExportRowLevelSecurityProvider"/>
            </list>
        </property>
    </bean>
    
    <bean class="org.broadleafcommerce.common.extensibility.context.merge.LateStageMergeBeanPostProcessor">
        <property name="collectionRef" value="blExportRowLevelSecurityProviders" />
        <property name="targetRef" value="blRowLevelSecurityProviders" />
    </bean>
    
    <bean id="blAdminExportJsFileList" class="org.springframework.beans.factory.config.ListFactoryBean" >
        <property name="sourceList">
            <list>
                <value>admin/export.js</value>
            </list>
        </property>
    </bean>

    <bean class="org.broadleafcommerce.common.extensibility.context.merge.LateStageMergeBeanPostProcessor">
        <property name="collectionRef" value="blAdminExportJsFileList" />
        <property name="targetRef" value="blJsFileList" />
    </bean>

    <bean id="blExportJsLocations" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                <value>classpath:/export_style/js/</value>
            </list>
        </property>
    </bean>

    <bean class="org.broadleafcommerce.common.extensibility.context.merge.LateStageMergeBeanPostProcessor">
        <property name="collectionRef" value="blExportJsLocations" />
        <property name="targetRef" value="blJsLocations" />
    </bean>
    
    <bean id="blAdminExportClasspathTemplateResolver" class="org.broadleafcommerce.presentation.resolver.BroadleafClasspathTemplateResolver">
        <property name="prefix" value="export_style/templates/admin/" />
        <property name="suffix" value=".html" />
        <property name="templateMode" value="HTML" />
        <property name="characterEncoding" value="UTF-8" />
        <property name="cacheable" value="${cache.page.templates}"/>
        <property name="cacheTTLMs" value="${cache.page.templates.ttl}" />
        <property name="order" value="250"/>
    </bean>

</beans>

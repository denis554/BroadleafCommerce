<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="org.broadleafcommerce.profile">
        <context:exclude-filter type="regex" expression="org.broadleafcommerce.profile.web.*"/>
    </context:component-scan>

	<bean id="blEmailInfo" class="org.broadleafcommerce.common.email.service.info.EmailInfo" />
	<bean id="blNullEmailInfo" class="org.broadleafcommerce.common.email.service.info.NullEmailInfo" />
	<bean id="blRegistrationEmailInfo" parent="blNullEmailInfo" />

	<bean id="blServiceMonitor" class="org.broadleafcommerce.common.vendor.service.monitor.ServiceMonitor" init-method="init"/>
	
	<bean id="springAppContext" class="org.broadleafcommerce.common.util.SpringAppContext"/>
	
	<bean id="blEncryptionModule" class="org.broadleafcommerce.common.encryption.DefaultEncryptionModule"/>
	
	<bean id="blCustomerService" class="org.broadleafcommerce.profile.core.service.CustomerServiceImpl">
		<property name="passwordResetHandlers">
			<list>
				<bean class="org.broadleafcommerce.profile.core.service.handler.EmailNotificationPasswordUpdatedHandler">
					<property name="passwordResetEmailSubject">
						<map>
							<entry key="en_US">
								<value>Password Reset</value>
							</entry>
						</map>
					</property>
					<property name="passwordResetEmailTemplate">
						<map>
							<entry key="en_US">
								<value>org/broadleafcommerce/profile/email/service/template/passwordReset.vm</value>
							</entry>
						</map>
					</property>
					<property name="passwordResetEmailFromAddress" value="team@yourcompany.com"/>
				</bean>
			</list>
		</property>
	</bean>
	
    <bean id="blCustomerForgotPasswordEmail" class="org.broadleafcommerce.common.email.service.info.EmailInfo">
        <property name="fromAddress" value="${customerService.fromAddress}"/>
        <property name="emailTemplate" value="${customerForgotPasswordEmail.emailTemplate}"/>
        <property name="subject" value="${customerForgotPasswordEmail.subject}"/>
    </bean>
    
    <bean id="blCustomerForgotUsernameEmailInfo" class="org.broadleafcommerce.common.email.service.info.EmailInfo">
        <property name="fromAddress" value="${customerService.fromAddress}"/>
        <property name="emailTemplate" value="${customerForgotUsernameEmail.emailTemplate}"/>
        <property name="subject" value="${customerForgotUsernameEmail.subject}"/>
    </bean>	
	
</beans>

	<bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

	<bean id="entityConfiguration" class="org.broadleafcommerce.profile.util.EntityConfiguration"/>

	<!-- Entity mappings - override for extensibility -->
	<bean id="org.broadleafcommerce.catalog.domain.BasePrice" class="org.broadleafcommerce.catalog.domain.BasePriceImpl"/>
	<bean id="org.broadleafcommerce.catalog.domain.Category" class="org.broadleafcommerce.catalog.domain.CategoryImpl"/>
	<bean id="org.broadleafcommerce.catalog.domain.CategoryProduct" class="org.broadleafcommerce.catalog.domain.CategoryProductImpl"/>
	<bean id="org.broadleafcommerce.order.domain.FulfillmentGroup" class="org.broadleafcommerce.order.domain.FulfillmentGroupImpl"/>
	<bean id="org.broadleafcommerce.order.domain.FulfillmentGroupItem" class="org.broadleafcommerce.order.domain.FulfillmentGroupItemImpl"/>
	<bean id="org.broadleafcommerce.order.domain.Order" class="org.broadleafcommerce.order.domain.OrderImpl"/>
	<bean id="org.broadleafcommerce.order.domain.OrderItem" class="org.broadleafcommerce.order.domain.OrderItemImpl"/>
	<bean id="org.broadleafcommerce.order.domain.PaymentInfo" class="org.broadleafcommerce.order.domain.PaymentInfoImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.Address" class="org.broadleafcommerce.profile.domain.AddressImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.ChallengeQuestion" class="org.broadleafcommerce.profile.domain.ChallengeQuestionImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.Country" class="org.broadleafcommerce.profile.domain.CountryImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.Customer" class="org.broadleafcommerce.profile.domain.CustomerImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.CustomerAddress" class="org.broadleafcommerce.profile.domain.CustomerAddressImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.CustomerPhone" class="org.broadleafcommerce.profile.domain.CustomerPhoneImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.IdGeneration" class="org.broadleafcommerce.profile.domain.IdGenerationImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.Phone" class="org.broadleafcommerce.profile.domain.PhoneImpl"/>
	<bean id="org.broadleafcommerce.catalog.domain.Product" class="org.broadleafcommerce.catalog.domain.ProductImpl"/>
	<bean id="org.broadleafcommerce.catalog.domain.Sku" class="org.broadleafcommerce.catalog.domain.SkuImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.State" class="org.broadleafcommerce.profile.domain.StateImpl"/>
	<bean id="org.broadleafcommerce.profile.domain.User" class="org.broadleafcommerce.profile.domain.UserImpl"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTracking" class="org.broadleafcommerce.email.domain.EmailTrackingImpl"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTrackingClicks" class="org.broadleafcommerce.email.domain.EmailTrackingClicksImpl"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTrackingOpens" class="org.broadleafcommerce.email.domain.EmailTrackingOpensImpl"/>
	<bean id="org.broadleafcommerce.payment.secure.domain.BankAccountPaymentInfo" class="org.broadleafcommerce.payment.secure.domain.BankAccountPaymentInfoImpl"/>
	<bean id="org.broadleafcommerce.payment.secure.domain.CreditCardPaymentInfo" class="org.broadleafcommerce.payment.secure.domain.CreditCardPaymentInfoImpl"/>
	
	<bean id="taxModule" class="org.broadleafcommerce.pricing.module.SimpleTaxModule">
		<property name="factor" value="0.05"/>
	</bean>
	
	<bean id="shippingModule" class="org.broadleafcommerce.pricing.module.BandedShippingModule"/>
	
	<bean id="giftCardModule" class="org.broadleafcommerce.payment.order.module.DefaultGiftCardModule"/>
	
	<bean id="bankAccountModule" class="org.broadleafcommerce.payment.order.module.DefaultBankAccountModule"/>
	
	<bean id="creditCardModule" class="org.broadleafcommerce.payment.order.module.DefaultCreditCardModule"/>
	
	<bean id="pricingWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.pricing.workflow.PricingProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.pricing.workflow.CalculateShipping">
                    <property name="shippingModule" ref="shippingModule"/>
                </bean>
                <bean class="org.broadleafcommerce.pricing.workflow.CalculateOrderSubtotal"/>
				<bean class="org.broadleafcommerce.pricing.workflow.CalculateTax">
					<property name="taxModule" ref="taxModule"/>
				</bean>
				<bean class="org.broadleafcommerce.pricing.workflow.CalculateTotal"/>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>
	
	<bean id="authorizeAndDebitWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.payment.order.workflow.PaymentProcessContextFactory">
				<property name="paymentActionType" value="AUTHORIZEANDDEBIT"/>
			</bean>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.payment.order.workflow.PayWithGiftCard">
					<property name="giftCardModule" ref="giftCardModule"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.order.workflow.PayWithBankAccount">
					<property name="bankAccountModule" ref="bankAccountModule"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.order.workflow.PayWithCreditCard">
					<property name="creditCardModule" ref="creditCardModule"/>
				</bean>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>
	
	<bean id="checkoutWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.checkout.workflow.CheckoutProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.checkout.workflow.ApplyOperation">
					<property name="workflow" ref="pricingWorkflow"/>
				</bean>
				<bean class="org.broadleafcommerce.checkout.workflow.ApplyOperation">
					<property name="workflow" ref="authorizeAndDebitWorkflow"/>
				</bean>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>
	
	<bean id="securePaymentInfoDao" class="org.broadleafcommerce.payment.secure.dao.SecurePaymentInfoDaoJpa">
		<constructor-arg index="0"><ref bean="entityManagerFactory"/></constructor-arg>
	</bean>
	
	<bean id="pricingService" class="org.broadleafcommerce.pricing.service.PricingServiceImpl">
		<property name="taxModule" ref="taxModule"/>
		<property name="shippingModule" ref="shippingModule"/>
	</bean>
</beans>

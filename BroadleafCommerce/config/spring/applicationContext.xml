	<bean class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />

	<bean id="entityConfiguration" class="org.broadleafcommerce.profile.util.EntityConfiguration"/>

	<!-- Entity mappings - override for extensibility -->
	<bean id="org.broadleafcommerce.catalog.domain.BasePrice" class="org.broadleafcommerce.catalog.domain.BasePriceImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.catalog.domain.Category" class="org.broadleafcommerce.catalog.domain.CategoryImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.catalog.domain.CategoryProduct" class="org.broadleafcommerce.catalog.domain.CategoryProductImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.FulfillmentGroup" class="org.broadleafcommerce.order.domain.FulfillmentGroupImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.FulfillmentGroupItem" class="org.broadleafcommerce.order.domain.FulfillmentGroupItemImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.Order" class="org.broadleafcommerce.order.domain.OrderImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.DiscreteOrderItem" class="org.broadleafcommerce.order.domain.DiscreteOrderItemImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.BundleOrderItem" class="org.broadleafcommerce.order.domain.BundleOrderItemImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.GiftWrapOrderItem" class="org.broadleafcommerce.order.domain.GiftWrapOrderItemImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.order.domain.PaymentInfo" class="org.broadleafcommerce.order.domain.PaymentInfoImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Address" class="org.broadleafcommerce.profile.domain.AddressImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.ChallengeQuestion" class="org.broadleafcommerce.profile.domain.ChallengeQuestionImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Country" class="org.broadleafcommerce.profile.domain.CountryImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Customer" class="org.broadleafcommerce.profile.domain.CustomerImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.CustomerAddress" class="org.broadleafcommerce.profile.domain.CustomerAddressImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.CustomerPhone" class="org.broadleafcommerce.profile.domain.CustomerPhoneImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.IdGeneration" class="org.broadleafcommerce.profile.domain.IdGenerationImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Phone" class="org.broadleafcommerce.profile.domain.PhoneImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.catalog.domain.Product" class="org.broadleafcommerce.catalog.domain.ProductImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.catalog.domain.Sku" class="org.broadleafcommerce.catalog.domain.SkuImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.State" class="org.broadleafcommerce.profile.domain.StateImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.User" class="org.broadleafcommerce.profile.domain.UserImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTracking" class="org.broadleafcommerce.email.domain.EmailTrackingImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTrackingClicks" class="org.broadleafcommerce.email.domain.EmailTrackingClicksImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTrackingOpens" class="org.broadleafcommerce.email.domain.EmailTrackingOpensImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.payment.domain.BankAccountPaymentInfo" class="org.broadleafcommerce.payment.domain.BankAccountPaymentInfoImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.payment.domain.CreditCardPaymentInfo" class="org.broadleafcommerce.payment.domain.CreditCardPaymentInfoImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.payment.domain.GiftCardPaymentInfo" class="org.broadleafcommerce.payment.domain.GiftCardPaymentInfoImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.marketing.domain.TargetContent" class="org.broadleafcommerce.marketing.domain.TargetContentImpl" scope="prototype"/>

	<bean id="blEmailInfo" class="org.broadleafcommerce.email.service.info.EmailInfo" />
	<bean id="blRegistrationEmailInfo" parent="blEmailInfo">
		<property name="subject"><value>You have successfully registered!</value></property>
		<property name="fromAddress"><value>demo@broadleafcommerce.com</value></property>
		<property name="emailTemplate"><value>org/broadleafcommerce/email/service/template/default.vm</value></property>
		<property name="sendAsyncPriority"><value>2</value></property>
		<property name="sendEmailReliableAsync"><value>false</value></property>
	</bean>

	<bean id="taxModule" class="org.broadleafcommerce.pricing.service.module.SimpleTaxModule">
		<property name="factor" value="0.05"/>
	</bean>

	<bean id="shippingModule" class="org.broadleafcommerce.pricing.service.module.BandedShippingModule">
		<property name="feeTypeMapping">
			<map>
	 			<entry key="standard" value="SHIPPING" />
	 			<entry key="expedited" value="EXPEDITED"/>
	 			<entry key="truck" value="FREE" />
	 			<entry key="pickup" value="FREE" />
			</map>
		</property>				
		<property name="feeSubTypeMapping">
			<map>
				<entry key="ALL" value="ALL" />
	 			<entry key="alsk" value="alsk" />
	 			<entry key="hawi" value="hawi" />
			</map>
		</property>				
	</bean>

	<bean id="pricingWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.pricing.service.workflow.PricingProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
                <bean class="org.broadleafcommerce.pricing.service.workflow.SubtotalActivity"/>
                <bean class="org.broadleafcommerce.pricing.service.workflow.ShippingActivity">
                    <property name="shippingModule" ref="shippingModule"/>
                </bean>
				<bean class="org.broadleafcommerce.pricing.service.workflow.TaxActivity">
					<property name="taxModule" ref="taxModule"/>
				</bean>
				<bean class="org.broadleafcommerce.pricing.service.workflow.TotalActivity"/>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>

	<bean id="giftCardModule" class="org.broadleafcommerce.payment.service.module.DefaultModule"/>

	<bean id="bankAccountModule" class="org.broadleafcommerce.payment.service.module.DefaultModule"/>

	<bean id="creditCardModule" class="org.broadleafcommerce.payment.service.module.DefaultModule"/>

	<bean id="giftCardService" class="org.broadleafcommerce.payment.service.PaymentServiceImpl">
		<property name="paymentModule" ref="giftCardModule"/>
	</bean>

	<bean id="creditCardService" class="org.broadleafcommerce.payment.service.PaymentServiceImpl">
		<property name="paymentModule" ref="creditCardModule"/>
	</bean>

	<bean id="bankAccountService" class="org.broadleafcommerce.payment.service.PaymentServiceImpl">
		<property name="paymentModule" ref="bankAccountModule"/>
	</bean>

	<bean id="authorizeAndDebitWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.payment.service.workflow.PaymentProcessContextFactory">
				<property name="paymentActionType" value="AUTHORIZEANDDEBIT"/>
			</bean>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.payment.service.workflow.PaymentActivity">
					<property name="paymentService" ref="giftCardService"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.service.workflow.PaymentActivity">
					<property name="paymentService" ref="bankAccountService"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.service.workflow.PaymentActivity">
					<property name="paymentService" ref="creditCardService"/>
				</bean>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>

	<bean id="paymentWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.payment.service.workflow.SimplePaymentProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.payment.service.workflow.CompositeActivity">
					<property name="workflow" ref="authorizeAndDebitWorkflow"/>
				</bean>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>

	<bean id="checkoutWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.checkout.service.workflow.CheckoutProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.checkout.service.workflow.PricingServiceActivity"/>
				<bean class="org.broadleafcommerce.checkout.service.workflow.PaymentServiceActivity"/>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="defaultErrorHandler"/>
	</bean>
	
	<bean id="messageCreatorBLC" class="org.broadleafcommerce.email.service.message.MessageCreator">
		<constructor-arg ref="velocityEngine"/>
		<constructor-arg ref="mailSender"/>
		<constructor-arg>
			<map>
                <entry key="number">
                	<bean class="org.apache.velocity.tools.generic.NumberTool" scope="prototype"/>
                </entry>
                <entry key="serverInfo" value-ref="serverInfo"/>
            </map>
        </constructor-arg>
	</bean>
	
	<bean id="shippingService" class="org.broadleafcommerce.pricing.service.ShippingServiceImpl">
		<property name="shippingModule" ref="shippingModule"/>
	</bean>
</beans>

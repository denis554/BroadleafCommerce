<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:product="org.broadleafcommerce.admin.view.catalog.product.*"
	xmlns:components1="org.broadleafcommerce.admin.catalog.view.product.components.*"
	xmlns:product1="org.broadleafcommerce.admin.catalog.view.product.*">
	<mx:Script>
		<![CDATA[
			import org.broadleafcommerce.admin.catalog.model.CatalogModelLocator;
			import org.broadleafcommerce.admin.catalog.view.product.components.ProductsDataGrid;
			import org.broadleafcommerce.admin.catalog.model.ProductModel;
			import org.broadleafcommerce.admin.catalog.control.events.product.EditProductEvent;
			import org.broadleafcommerce.admin.catalog.vo.product.Product;
			import mx.controls.DataGrid;
			import mx.events.ListEvent;
			import mx.events.DataGridEvent;
			import org.broadleafcommerce.admin.core.model.AppModelLocator;

			[Bindable]
			private var productModel:ProductModel = CatalogModelLocator.getInstance().productModel;

			private function handleDataGridClick(event:MouseEvent):void{
				var vcpe:EditProductEvent = new EditProductEvent(Product(DataGrid(event.currentTarget).selectedItem), false);
				vcpe.dispatch();
			}
		]]>
	</mx:Script>
	<mx:Binding
		source="productModel.catalogProducts"
		destination="productsDataGrid.dataProvider"/>

		<!--components1:ProductsDataGrid
			id="productsDataGrid" width="100%" height="100%" click="handleDataGridClick(event)"/-->
		<mx:DataGrid id="productsDataGrid" width="100%" height="100%" click="handleDataGridClick(event)">
			<mx:columns>
			<mx:DataGridColumn
				dataField="id"
				headerText="Id"
				width="50"/>
			<mx:DataGridColumn
				dataField="name"
				headerText="Name"/>
			</mx:columns>
		</mx:DataGrid>
</mx:Canvas>

<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
	version="2.0">

	<named-query name="BC_FIND_STORE_BY_STORE_ID" >
		<query>SELECT store FROM org.broadleafcommerce.core.store.domain.Store store
		WHERE store.id = :id</query>
	</named-query>
	
		<named-query name="BC_FIND_ALL_STORES" >
		<query>SELECT store FROM org.broadleafcommerce.core.store.domain.Store store </query>
	</named-query>

</entity-mappings>
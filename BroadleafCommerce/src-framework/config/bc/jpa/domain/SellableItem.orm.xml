<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_FIRST_SELLABLE_ITEM" >
		<query>SELECT sellableItem FROM org.broadleafcommerce.catalog.domain.SellableItem sellableItem
		</query>
	</named-query>

	<named-query name="READ_ALL_SELLABLE_ITEMS">
		<query>SELECT sellableItem FROM org.broadleafcommerce.catalog.domain.SellableItem sellableItem
		</query>
	</named-query>

	<named-query name="READ_SELLABLE_ITEMS_BY_ID">
		<query>SELECT sellableItem FROM org.broadleafcommerce.catalog.domain.SellableItem sellableItem
				WHERE sellableItem.id IN (:sellableItemIds)
		</query>
	</named-query>

	<named-query name="READ_SELLABLE_ITEMS_BY_CATEGORY_ID">
		<query>SELECT sellableItem FROM org.broadleafcommerce.catalog.domain.SellableItem sellableItem
			   WHERE sellableItem.catalogItem.id = :catalogItemId
		</query>
	</named-query>

	<entity class="org.broadleafcommerce.catalog.domain.SellableItem" name="sellableItem">
        <table name="BLC_SELLABLE_ITEM" >        	
        </table>
        <inheritance strategy="JOINED"/>
		<discriminator-column name="TYPE"/>

        <attributes>
            <id name="id">            	
            	<column name="SELLABLE_ITEM_ID"/>
                <generated-value/>                
            </id>
            <basic name="price">
                <column name="PRICE" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="NAME" />
            </basic>
			<many-to-one name="catalogItem" >
				<join-column name="CATALOG_ITEM_ID" nullable="false"/>
			</many-to-one>
			<one-to-many name="itemAttributes" mapped-by="sellableItem">
				<map-key name="name"/>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			<embedded name="auditable"/>            
        </attributes>
    </entity>

</entity-mappings>
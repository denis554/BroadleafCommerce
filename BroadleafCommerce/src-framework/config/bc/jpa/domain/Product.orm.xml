<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_PRODUCTS_BY_NAME" >
		<query>SELECT product FROM org.broadleafcommerce.catalog.domain.Product product
		WHERE product.name LIKE :name</query>
	</named-query>

	<entity class="org.broadleafcommerce.catalog.domain.BroadleafProduct" name="product">
        <table name="BLC_PRODUCT"/>
        <inheritance strategy="JOINED"/>
        <attributes>
            <id name="id">
            	<column name="PRODUCT_ID"/>
                <generated-value/>
            </id>
            <basic name="description">
                <column name="DESCRIPTION" />
            </basic>
            <basic name="name">
                <column name="NAME"/>
            </basic>
            <one-to-many name="itemAttributes" target-entity="org.broadleafcommerce.catalog.domain.BroadleafProduct">
            	<map-key name="name"/>
            </one-to-many>
            <one-to-many name="skus" mapped-by="product" target-entity="org.broadleafcommerce.catalog.domain.BroadleafSku"/>
            <one-to-many name="productListEntries" mapped-by="product" target-entity="org.broadleafcommerce.catalog.domain.BroadleafProduct"/>
			<one-to-many name="productImages" mapped-by="product" target-entity="org.broadleafcommerce.catalog.domain.BroadleafProductImage"/>
			<one-to-many name="productAuxImages" mapped-by="product" target-entity="org.broadleafcommerce.catalog.domain.BroadleafProductAuxImage">
				<order-by>displayOrder</order-by>
			</one-to-many>
			<transient name="productImageMap" />
        </attributes>
    </entity>
</entity-mappings>
<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_CONTACT_INFO_BY_CUSTOMER_ID" >
		<query>SELECT contactInfo FROM org.broadleafcommerce.profile.domain.ContactInfo contactInfo
		WHERE contactInfo.customer.id = :customerId</query>
	</named-query>

	<entity class="org.broadleafcommerce.profile.domain.ContactInfoImpl" name="contactInfo">
        <table name="BLC_CONTACT_INFO"/>
        <inheritance strategy="JOINED"/>
		<entity-listeners>
			<entity-listener class="org.broadleafcommerce.profile.domain.listener.TemporalTimestampListener" />
		</entity-listeners>
        <attributes>
            <id name="id">
            	<column name="CONTACT_ID"/>
                <generated-value/>
            </id>
            <basic name="primaryPhone">
                <column name="PRIMARY_PHONE" />
            </basic>
            <basic name="secondaryPhone">
                <column name="SECONDARY_PHONE"/>
            </basic>
            <basic name="email">
                <column name="EMAIL"/>
            </basic>
            <basic name="fax">
                <column name="FAX"/>
            </basic>
            <many-to-one name="customer" target-entity="org.broadleafcommerce.profile.domain.CustomerImpl">
            	<join-column name="CUSTOMER_ID"/>
            	<cascade><cascade-all/></cascade>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_ALL_RULE_CATEGORIES" >
		<query>SELECT promotionRuleCategory FROM org.broadleafcommerce.rules.domain.PromotionRuleCategory promotionRuleCategory</query>
	</named-query>


	<entity class="org.broadleafcommerce.rules.domain.PromotionRuleCategory" name="promotionRuleCategory">
        <table name="BLC_PROMOTION_RULE_CATEGORY_DEFINITION" >        	
        </table>
        <inheritance strategy="JOINED"/>

        <attributes>
            <id name="id">            	
            	<column name="PROMOTION_RULE_CATEGORY_ID"/>
                <generated-value/>                
            </id>
            <basic name="name">
                <column name="NAME" />
            </basic>
        </attributes>
    </entity>
</entity-mappings>
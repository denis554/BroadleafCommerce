<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_ORDER_ITEMS_BY_ORDER_ID" >
		<query>SELECT orderItem FROM org.broadleafcommerce.order.domain.BroadleafOrderItem orderItem
		WHERE orderItem.order.id = :orderId</query>
	</named-query>

	<entity class="org.broadleafcommerce.order.domain.BroadleafOrderItem" name="orderItem">
        <table name="BLC_ORDER_ITEM"/>
        <inheritance strategy="JOINED"/>
        <attributes>
            <id name="id">
            	<column name="ORDER_ITEM_ID"/>
                <generated-value/>
            </id>
            <basic name="finalPrice">
                <column name="FINAL_PRICE" />
            </basic>
            <basic name="quantity">
                <column name="QUANTITY"/>
            </basic>
            <many-to-one name="sku" target-entity="org.broadleafcommerce.catalog.domain.BroadleafSku">
				<join-column name="SKU_ID" nullable="false"/>
            </many-to-one>
			<many-to-one name="order" target-entity="org.broadleafcommerce.order.domain.BroadleafOrder" >
				<join-column name="ORDER_ID"/>
			</many-to-one>
        </attributes>
    </entity>
</entity-mappings>
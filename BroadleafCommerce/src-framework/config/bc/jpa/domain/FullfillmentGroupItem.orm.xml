<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_FULLFILLMENT_GROUP_ITEM_BY_FULLFILLMENT_GROUP_ID" >
		<query>SELECT fullfillmentGroupItem FROM org.broadleafcommerce.order.domain.FullfillmentGroupItem fullfillmentGroupItem
		WHERE fullfillmentGroupItem.fullfillmentGroupId = :fullfillmentGroupId</query>
	</named-query>

	<entity class="org.broadleafcommerce.order.domain.FullfillmentGroupItem" name="fullfillmentGroupItem">
        <table name="BLC_FULLFILLMENT_GROUP_ITEM"/>
        <inheritance strategy="JOINED"/>
		<discriminator-column name="TYPE"/>
        <attributes>
            <id name="id">
            	<column name="ID"/>
                <generated-value/>
            </id>
            <basic name="quantity">
                <column name="QUANTITY" />
            </basic>
            <basic name="cost">
                <column name="COST" />
            </basic>
            <basic name="fullfillmentGroupId">
                <column name="FULLFILLMENT_GROUP_ID" />
            </basic>
            <basic name="orderItemId">
                <column name="ORDER_ITEM_ID" />
            </basic>
			<one-to-one name="orderItem" target-entity="org.broadleafcommerce.order.domain.BroadleafOrderItem">
				<join-column name="ID"/>
			</one-to-one>
        </attributes>
    </entity>
</entity-mappings>
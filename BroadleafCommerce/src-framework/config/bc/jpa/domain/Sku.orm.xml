<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_FIRST_SKU" >
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.BroadleafSku sku
		</query>
	</named-query>

	<named-query name="READ_ALL_SKUS">
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.BroadleafSku sku
		</query>
	</named-query>

	<named-query name="READ_SKUS_BY_ID">
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.BroadleafSku sku
				WHERE sku.id IN (:skuIds)
		</query>
	</named-query>

	<named-query name="READ_SKUS_BY_CATEGORY_ID">
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.BroadleafSku sku
			   WHERE sku.product.id = :productId
		</query>
	</named-query>

	<entity class="org.broadleafcommerce.catalog.domain.BroadleafSku" name="sku">
        <table name="BLC_SKU"/>
        <inheritance strategy="JOINED"/>
		<discriminator-column name="TYPE"/>
        <attributes>
            <id name="id">
            	<column name="SKU_ID"/>
                <generated-value/>
            </id>
            <basic name="price">
                <column name="PRICE" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="NAME" />
            </basic>
			<many-to-one name="product" target-entity="org.broadleafcommerce.catalog.domain.BroadleafProduct">
				<join-column name="PRODUCT_ID"/>
			</many-to-one>
			<many-to-one name="parentSku" target-entity="org.broadleafcommerce.catalog.domain.BroadleafSku">
				<join-column name="PARENT_SKU_ID"/>
			</many-to-one>
			<one-to-many name="childSkus" mapped-by="parentSku" target-entity="org.broadleafcommerce.catalog.domain.BroadleafSku">
				<cascade><cascade-all/></cascade>
			</one-to-many>
			<one-to-many name="itemAttributes" mapped-by="sku" target-entity="org.broadleafcommerce.catalog.domain.BroadleafItemAttribute">
				<map-key name="name"/>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			<one-to-many name="skuImages" mapped-by="sku" target-entity="org.broadleafcommerce.catalog.domain.BroadleafSkuImage"/>
			<embedded name="auditable"/>
			<transient name="skuImageMap" />
        </attributes>
    </entity>
</entity-mappings>
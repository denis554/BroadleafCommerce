<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<entity class="org.broadleafcommerce.catalog.domain.SellableItemBundle" name="sellableItemBundle">
        <table name="BLC_SELLABLE_ITEM_BUNDLE" >        	
        </table>
        <inheritance strategy="JOINED"/>

        <attributes>
			<many-to-many name="bundledItems">
				<join-table name="BLC_BUNDLED_ITEMS">
					<join-column name="BUNDLE_ID" referenced-column-name="SELLABLE_ITEM_ID"/>
					<inverse-join-column name="SELLABLE_ITEM_ID" referenced-column-name="SELLABLE_ITEM_ID"/>
				</join-table>
			</many-to-many>			
        </attributes>
    </entity>

</entity-mappings>
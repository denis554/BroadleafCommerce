<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
	<persistence-unit name="BroadleafCommercePu" transaction-type="RESOURCE_LOCAL">
		<mapping-file>org/broadleafcommerce/catalog/dao/query/CatalogItem.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/catalog/dao/query/Category.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/catalog/dao/query/SellableItem.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/order/dao/query/Order.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/order/dao/query/OrderItem.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/order/dao/query/OrderPayment.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/order/dao/query/OrderShipping.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/rules/dao/query/RuleCategory.orm.xml</mapping-file>
		<mapping-file>org/broadleafcommerce/rules/dao/query/ShoppingCartPromotion.orm.xml</mapping-file>
        <mapping-file>org/broadleafcommerce/rules/dao/query/CouponCode.orm.xml</mapping-file>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.transaction.flush_before_completion" value="false"/>
            <property name="hibernate.connection.autocommit" value="false"/>

            <!-- This stuff is for caching... -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
	</persistence-unit>
</persistence>
<?xml version="1.0" encoding="UTF-8"?>
<project name="Broadleaf-internal" default="usage" basedir="..">
	<description>
            Broadleaf Build File
    </description>
	<property name="stage.dir" value="${basedir}/build/stage" />
	<property name="framework.src.dir" value="${basedir}/src-framework" />
	<property name="profile.src.dir" value="${basedir}/src-profile" />
	<property name="test.src.dir" value="${basedir}/src-test" />
	<property name="lib.dir" value="${basedir}/lib" />
	<property name="config.dir" value="${basedir}/config" />
	<property name="compile.lib.dir" value="${lib.dir}/compile/bin" />
	<property name="common.lib.dir" value="${lib.dir}/common" />
	<property name="spring.config.dir" value="${config.dir}/spring" />
	<property name="jdbc.config.dir" value="${config.dir}/jdbc" />
	<property name="test.output.dir" value="${basedir}/test-output" />
	<property file="${basedir}/build/build.properties" />

	<taskdef resource="net/sf/antcontrib/antcontrib.properties">
		<classpath>
			<pathelement location="${lib.dir}/test/bin/ant-contrib-1.0b3.jar" />
		</classpath>
	</taskdef>

	<fileset id="compile.lib" dir="${compile.lib.dir}" description="compile-time dependencies">
		<include name="**/*.jar" />
	</fileset>

	<fileset id="common.lib" dir="${common.lib.dir}" description="common dependencies">
		<include name="**/*.jar" />
	</fileset>
	
	<target name="compile-all" depends="compile-profile, compile-framework"/>

	<target name="compile-framework" depends="setup, compile-profile">
		<!--
			Framework is allowed to depend on profile, but nothing else
		-->
		<mkdir dir="${stage.dir}/framework-jar" />

		<path id="compile-lib">
			<fileset refid="compile.lib" />
			<fileset refid="common.lib" />
			<dirset dir="${stage.dir}/profile-jar"/>
		</path>

		<echo>Compiling with debug=${debug.compile}</echo>
		<javac destdir="${stage.dir}/framework-jar" srcdir="${framework.src.dir}" classpathref="compile-lib" debug="${debug.compile}"/>
	</target>
		
	<target name="build-framework-jar" depends="compile-framework, build-profile-jar">
		<copy todir="${stage.dir}/framework-jar">
			<fileset dir="${framework.src.dir}">
				<include name="**/*.*" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>

		<copy todir="${stage.dir}/framework-jar">
			<fileset dir="${spring.config.dir}">
				<include name="bl-*" />
			</fileset>
		</copy>

		<copy tofile="${stage.dir}/framework-jar/jdbc.properties">
			<fileset dir="${jdbc.config.dir}">
				<include name="jdbc.properties" />
			</fileset>
		</copy>

		<jar jarfile="${stage.dir}/broadleaf-framework.jar">
			<fileset dir="${stage.dir}/framework-jar">
				<include name="**/*.class" />
				<include name="**/*.properties" />
				<include name="**/*.xml" />
				<include name="**/*.vm" />
				<include name="**/*.mvel" />
				<include name="**/*.txt" />
				<include name="META-INF/**" />
				<exclude name="**/test/**/*.class" />
				<exclude name="**/web/**/*.*" />
				<exclude name="**/layout/**/*.*" />
			</fileset>
		</jar>
		
		<jar jarfile="${stage.dir}/broadleaf-framework-web.jar">
			<fileset dir="${stage.dir}/framework-jar">
				<include name="**/web/**/*.*" />
				<include name="**/layout/**/*.*" />
				<include name="META-INF/**" />
			</fileset>
		</jar>
	</target>

	<target name="build-framework-source-jar" depends="build-profile-source-jar">
		<delete file="${stage.dir}/broadleaf-framework-sources.jar" />
		<jar jarfile="${stage.dir}/broadleaf-framework-sources.jar" basedir="${framework.src.dir}">
			<include name="**/*.java" />
			<include name="**/*.properties" />
			<include name="**/*.xml" />
			<include name="**/*.vm" />
			<include name="**/*.mvel" />
			<include name="**/*.txt" />
			<include name="META-INF/**" />
			<exclude name="**/test/**/*.class" />
			<exclude name="**/web/**/*.*" />
			<exclude name="**/layout/**/*.*" />
		</jar>
		<jar jarfile="${stage.dir}/broadleaf-framework-sources-web.jar" basedir="${framework.src.dir}">
			<include name="META-INF/**" />
			<include name="**/web/**/*.*" />
			<include name="**/layout/**/*.*" />
		</jar>
	</target>

	<target name="generate-javadocs">
		<mkdir dir="${stage.dir}/javadocs" />

		<path id="compile-lib">
			<fileset refid="compile.lib" />
			<fileset refid="common.lib" />
		</path>

		<javadoc packagenames="org.broadleafcommerce.*" destdir="${stage.dir}/javadoc-api" classpathref="compile-lib" useexternalfile="true">

         <!-- Build Java docs for all of BLC: 
              Framework
              Profile-->
         <fileset dir="${framework.src.dir}">
            <include name="**/*.java" />
         </fileset>
         
         <fileset dir="${profile.src.dir}">
            <include name="**/*.java" />
         </fileset>
         
		</javadoc>
	</target>
	
	<target name="compile-profile" depends="setup">
		<mkdir dir="${stage.dir}/profile-jar" />

		<path id="compile-lib">
			<fileset refid="compile.lib" />
			<fileset refid="common.lib" />
		</path>

		<echo>Compiling with debug=${debug.compile}</echo>
		<javac destdir="${stage.dir}/profile-jar" srcdir="${profile.src.dir}" classpathref="compile-lib" debug="${debug.compile}"/>
	</target>

	<target name="build-profile-jar" depends="compile-profile">
		<copy todir="${stage.dir}/profile-jar">
			<fileset dir="${profile.src.dir}">
				<include name="**/*.*" />
				<exclude name="**/*.java" />
			</fileset>
			<fileset dir="${config.dir}">
				<include name="**/*.properties" />
				<include name="**/*.vm" />
			</fileset>
		</copy>

		<jar jarfile="${stage.dir}/broadleaf-profile.jar">
			<fileset dir="${stage.dir}/profile-jar">
				<include name="**/*.class" />
				<include name="**/*.properties" />
				<include name="**/*.txt" />
				<include name="**/*.xml" />
				<include name="**/*.vm" />
				<include name="**/*.mvel" />
				<include name="META-INF/**" />
				<exclude name="**/test/**/*.class" />
				<exclude name="**/web/**/*.*" />
			</fileset>
		</jar>
		
		<jar jarfile="${stage.dir}/broadleaf-profile-web.jar">
			<fileset dir="${stage.dir}/profile-jar">
				<include name="META-INF/**" />
				<include name="**/web/**/*.*" />
			</fileset>
		</jar>
	</target>

	<target name="build-profile-source-jar">
		<delete file="${stage.dir}/broadleaf-profile-sources.jar" />
		<jar jarfile="${stage.dir}/broadleaf-profile-sources.jar" basedir="${profile.src.dir}">
			<include name="**/*.java" />
			<include name="**/*.properties" />
			<include name="**/*.txt" />
			<include name="**/*.xml" />
			<include name="**/*.vm" />
			<include name="**/*.mvel" />
			<include name="META-INF/**" />
			<exclude name="**/test/**/*.class" />
			<exclude name="**/web/**/*.*" />
		</jar>
		
		<jar jarfile="${stage.dir}/broadleaf-profile-sources-web.jar" basedir="${profile.src.dir}">
			<include name="META-INF/**" />
			<include name="**/web/**/*.*" />
		</jar>
	</target>

	<target name="build-jars" depends="build-framework-jar,build-profile-jar"/>

	<target name="build-source-jars" depends="build-framework-source-jar,build-profile-source-jar"/>

    <target name="publish-jars"
            depends="build-jars, build-source-jars"
            description="Publishes all artifacts from this build to the shared repository">
    	<copy file="${stage.dir}/broadleaf-framework.jar" todir="${basedir}/../org.broadleafcommerce/framework/0.0.0/jars" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-framework-web.jar" todir="${basedir}/../org.broadleafcommerce/framework-web/0.0.0/jars" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-framework-sources.jar" todir="${basedir}/../org.broadleafcommerce/framework/0.0.0/sources" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-framework-sources-web.jar" todir="${basedir}/../org.broadleafcommerce/framework-web/0.0.0/sources" overwrite="true"/>
       	<copy file="${stage.dir}/broadleaf-profile.jar" todir="${basedir}/../org.broadleafcommerce/profile/0.0.0/jars" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-profile-web.jar" todir="${basedir}/../org.broadleafcommerce/profile-web/0.0.0/jars" overwrite="true"/>
       	<copy file="${stage.dir}/broadleaf-profile-sources.jar" todir="${basedir}/../org.broadleafcommerce/profile/0.0.0/sources" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-profile-sources-web.jar" todir="${basedir}/../org.broadleafcommerce/profile-web/0.0.0/sources" overwrite="true"/>
    	
    	<copy file="${stage.dir}/broadleaf-framework.jar" tofile="${basedir}/../libraries/cache/org.broadleafcommerce/framework/jars/broadleaf-framework-0.0.0.jar" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-framework-web.jar" tofile="${basedir}/../libraries/cache/org.broadleafcommerce/framework-web/jars/broadleaf-framework-web-0.0.0.jar" overwrite="true"/>
       	<copy file="${stage.dir}/broadleaf-profile.jar" tofile="${basedir}/../libraries/cache/org.broadleafcommerce/profile/jars/broadleaf-profile-0.0.0.jar" overwrite="true"/>
    	<copy file="${stage.dir}/broadleaf-profile-web.jar" tofile="${basedir}/../libraries/cache/org.broadleafcommerce/profile-web/jars/broadleaf-profile-web-0.0.0.jar" overwrite="true"/>
    </target>

	<target name="clean">
		<delete dir="${stage.dir}" />
		<delete dir="${test.output.dir}" />
	</target>

	<target name="setup" depends="clean">
		<echo>Setting up for environment = ${build.env}</echo>
		<mkdir dir="${stage.dir}" />
		<if>
			<equals arg1="${build.env}" arg2="dev" />
			<then>
				<property name="debug.compile" value="true" />
			</then>
			<elseif>
				<equals arg1="${build.env}" arg2="test" />
				<then>
					<property name="debug.compile" value="true" />
				</then>
			</elseif>
			<else>
				<property name="debug.compile" value="false" />
			</else>
		</if>
	</target>

	<target name="usage">
		<echo>
			This is an internal ANT build file.
			For development, use the targets in build.xml.
		</echo>
	</target>
</project>
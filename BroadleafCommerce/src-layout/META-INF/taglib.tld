<?xml version="1.0"?>
<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
    "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd"
>
<taglib>
    <tlib-version>3.0</tlib-version>
    <jsp-version>2.1</jsp-version>
    <short-name>bc</short-name>
    <uri>/broadleaf-layout</uri>

    <tag>
        <name>productLookup</name>
        <tag-class>org.broadleafcommerce.layout.tags.ProductLookupTag</tag-class>
        <body-content>empty</body-content>
        <description>Looks up a product by productId</description>
       	<attribute>
			<name>var</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Page scoped variable that the result is set to</description>
		</attribute>
       	<attribute>
			<name>productId</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
    </tag>

    <tag>
        <name>skuLookup</name>
        <tag-class>org.broadleafcommerce.layout.tags.SkuLookupTag</tag-class>
        <body-content>empty</body-content>
        <description>Looks up a sku by skuId</description>
       	<attribute>
			<name>var</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Page scoped variable that the result is set to</description>
		</attribute>
       	<attribute>
			<name>skuId</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
    </tag>

    <tag>
        <name>customerLookup</name>
        <tag-class>org.broadleafcommerce.layout.tags.CustomerLookupTag</tag-class>
        <body-content>empty</body-content>
        <description>Looks up a customer by customerId.  If no customerId is provided, the customer currently logged in is returned.</description>
       	<attribute>
			<name>var</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Page scoped variable that the result is set to</description>
		</attribute>
       	<attribute>
			<name>customerId</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
    </tag>

    <tag>
        <name>currentCart</name>
        <tag-class>org.broadleafcommerce.layout.tags.CurrentCartTag</tag-class>
        <body-content>empty</body-content>
        <description>Looks up a cart by customerId.  If no customerId is provided, the cart of the customer currently logged in is returned.  Can also provide the items in the order, and the total quantity of items in the cart.</description>
       	<attribute>
			<name>customerId</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
		</attribute>
       	<attribute>
			<name>orderVar</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Page scoped variable that the order is set to</description>
		</attribute>
       	<attribute>
			<name>orderItemsVar</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Page scoped variable for a List of the order items associated with the order</description>
		</attribute>
       	<attribute>
			<name>totalQuantityVar</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Page scoped variable that the order items count is set to. The order items count is a sum of the quantity of each item in the order.</description>
		</attribute>
    </tag>
</taglib>
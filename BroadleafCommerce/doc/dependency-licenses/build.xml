<?xml version="1.0" encoding="UTF-8"?>
<project name="BroadleafCommerceDependencyManagement" default="core">
	
	<property name="copy.destination" value="${destination}"/>
	
	<target name="core">
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="framework">
				<include name="**/*.jar"/>
				<include name="**/*.zip"/>
			</fileset>
		</copy>
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="../dist">
				<include name="**/*-framework-*.jar"/>
				<include name="**/*-profile-*.jar"/>
				<exclude name="**/*-sources.jar"/>
			</fileset>
		</copy>
	</target>
	
	<target name="demo">
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="demo">
				<include name="**/*.jar"/>
				<include name="**/*.zip"/>
			</fileset>
		</copy>
	</target>
	
	<target name="admin">
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="admin">
				<include name="**/*.jar"/>
				<include name="**/*.zip"/>
			</fileset>
		</copy>
	</target>
	
	<target name="usps">
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="usps">
				<include name="**/*.jar"/>
				<include name="**/*.zip"/>
			</fileset>
		</copy>
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="../dist">
				<include name="**/*-usps-*.jar"/>
				<exclude name="**/*-sources.jar"/>
			</fileset>
		</copy>
	</target>
	
	<target name="cybersource">
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="cybersource">
				<include name="**/*.jar"/>
				<include name="**/*.zip"/>
			</fileset>
		</copy>
		<copy flatten="true" todir="${copy.destination}">
			<fileset dir="../dist">
				<include name="**/*-cybersource-*.jar"/>
				<exclude name="**/*-sources.jar"/>
			</fileset>
		</copy>
	</target>
</project>
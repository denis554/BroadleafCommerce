<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="http://broadleafcommerce.org/vendor/usps/service/message/v3" xmlns="http://broadleafcommerce.org/vendor/usps/service/message/v3" attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="RateV3Request" type="RateV3RequestType"/>
  <xs:complexType name="RateV3RequestType">
    <xs:sequence>
      <xs:element type="RequestPackageType" name="Package" maxOccurs="25"/>
    </xs:sequence>
    <xs:attribute type="xs:string" name="USERID"/>
    <xs:attribute type="xs:string" name="PASSWORD"/>
  </xs:complexType>
  <xs:complexType name="ShipDateType">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute type="xs:string" name="Option" use="optional"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>
  <xs:complexType name="RequestPackageType">
    <xs:sequence>
      <xs:element name="Service">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="ALL"/>
            <xs:enumeration value="ONLINE"/>
            <xs:enumeration value="FIRST CLASS"/>
            <xs:enumeration value="PRIORITY"/>
            <xs:enumeration value="PRIORITY COMMERCIAL"/>
            <xs:enumeration value="EXPRESS"/>
            <xs:enumeration value="EXPRESS SH"/>
            <xs:enumeration value="EXPRESS HFP"/>
            <xs:enumeration value="EXPRESS COMMERCIAL"/>
            <xs:enumeration value="EXPRESS SH COMMERCIAL"/>
            <xs:enumeration value="EXPRESS HFP COMMERCIAL"/>
            <xs:enumeration value="BPM"/>
            <xs:enumeration value="PARCEL"/>
            <xs:enumeration value="MEDIA"/>
            <xs:enumeration value="LIBRARY"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element name="FirstClassMailType" minOccurs="0">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="LETTER"/>
            <xs:enumeration value="FLAT"/>
            <xs:enumeration value="PARCEL"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element type="xs:int" name="ZipOrigination"/>
 	  <xs:element type="xs:int" name="ZipDestination"/>
      <xs:element type="xs:int" name="Pounds"/>
      <xs:element type="xs:float" name="Ounces"/>
      <xs:element name="Container" minOccurs="0">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="RECTANGULAR"/>
            <xs:enumeration value="NONRECTANGULAR"/>
            <xs:enumeration value="VARIABLE"/>
            <xs:enumeration value="FLAT RATE BOX"/>
            <xs:enumeration value="FLAT RATE ENVELOPE"/>
            <xs:enumeration value="LG FLAT RATE BOX"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element name="Size" minOccurs="0">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="REGULAR"/>
            <xs:enumeration value="LARGE"/>
            <xs:enumeration value="OVERSIZE"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element type="xs:boolean" name="Machinable" minOccurs="0"/>
      <xs:element type="xs:float" name="Width" minOccurs="0"/>
      <xs:element type="xs:float" name="Length" minOccurs="0"/>
      <xs:element type="xs:float" name="Height" minOccurs="0"/>
      <xs:element type="xs:float" name="Girth" minOccurs="0"/>
      <xs:element type="ShipDateType" name="ShipDate" minOccurs="0"/>
      <xs:element type="xs:boolean" name="ReturnLocations" minOccurs="0"/>
    </xs:sequence>
    <xs:attribute type="xs:string" name="ID" use="optional"/>
  </xs:complexType>
</xs:schema>